@using Nop.Core
@using Nop.Services.Helpers
@using Nop.Web.Framework.UI
@inject IThemeContext themeContext
@inject IUserAgentHelper userAgentHelper
@{
    Layout ="";
    var themeName = await themeContext.GetWorkingThemeNameAsync();
    var supportRtl = await ShouldUseRtlThemeAsync();
}

@* add main CSS file *@
<link rel="stylesheet" href="/Themes/@themeName/Content/css/styles@(supportRtl ? ".rtl" : "").css" asp-bundle-key=".cssbundle" />

@* add jQuery UI css file *@
<link rel="stylesheet" href="~/lib_npm/jquery-ui-dist/jquery-ui.min.css" asp-bundle-key=".cssbundle" />